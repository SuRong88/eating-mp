page {
    -webkit-text-size-adjust: none;
    text-size-adjust: none;
    line-height: 1;
    word-break: break-all;
    font-size: 24rpx;
    color: #333;
    background-color: #fff;
    min-height: 100%;
    box-sizing: border-box;
    font-family: PingFangSC-Medium, Microsoft YaHei, arial, tahoma, '\5fae\8f6f\96c5\9ed1', 'Hiragino Sans GB', sans-serif !important;

}

.wrapper {
    width: 94%;
    margin: 0 auto;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.text-l {
    text-align: left;
}

.text-r {
    text-align: right;
}

.text-c {
    text-align: center;
}

.flex-1 {
    flex: 1;
}

.clearfix:after {
    content: "";
    clear: both;
    display: block;
    height: 0;
    visibility: hidden;
}

button::after {
    border: none;
