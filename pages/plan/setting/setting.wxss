/* pages/plan/setting.wxss */
.header {
    background: #FFE200;
}

.header-content {}

.tip-box {
    line-height: 80rpx;
    text-align: center;
    background: #FFF8EE;
    font-size: 14px;
    color: #B9956A;
    position: relative;
}

.tip-box .icon-close {
    width: 22rpx;
    height: 22rpx;
    position: absolute;
    right: 32rpx;
    top: 50%;
    transform: translateY(-50%);
}

.content {
    padding: 0 40rpx;
}

.btn-next {
    width: 100%;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #333333;
    background: #FFE102;
    border-radius: 40rpx;
    font-weight: 700;
    margin: 100rpx 0;
}

.tip {
    padding-top: 20rpx;
    font-size: 26rpx;
    color: #999999;
}

.item-title {
    padding: 60rpx 0 40rpx;
    font-size: 32rpx;
    color: #333333;
    font-weight: 700;
}

.main01-item.is-checked,
.main02-item.is-checked,
.main03-item.is-checked .price-box,
.main04-item.is-checked {
    position: relative;
    border: 1rpx solid #FF8800;
}

.main01-item.is-checked:after,
.main02-item.is-checked:after,
.main03-item.is-checked .price-box:after,
.main04-item.is-checked:after {
    content: '';
    display: block;
    position: absolute;
    top: -2rpx;
    right: -2rpx;
    width: 32rpx;
    height: 32rpx;
    background: url("data:image/png;base64,") no-repeat;
    /* background-position: (-4rpx -4rpx); */
    background-size: 100%;
    
}

/* 每周送餐 */
.main01-item {
    width: 120rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
    border: 1rpx solid #ccc;
}

/* 送达时间 */
.item-main02 {
    padding-bottom: 40rpx;
    border-bottom: 1rpx dashed #CCCCCC;
}

.main02-item {
    width: 325rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
    border: 1rpx solid #ccc;
    margin-bottom: 20rpx;
    font-weight: 700;
}

/* 饭菜分量 */
.main03-item {
    width: 325rpx;
}

.main03-item:nth-child(n+3) {
    margin-bottom: 20rpx;
}

.main03-item .price-box {
    line-height: 58rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
    border: 1rpx solid #ccc;
}

.main03-item .price {
    color: #D0021B;
    font-weight: 700;
    padding: 0 14rpx 20rpx 0;
}

.main03-item .desc {
    font-size: 26rpx;
    color: #C1A077;
    text-align: center;
    line-height: 36rpx;
    padding: 14rpx 30rpx 0;
}

/* 是否吃辣 */
.main04-item {
    width: 210rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    color: #666666;
    text-align: center;
    border: 1rpx solid #ccc;
    margin-bottom: 20rpx;
}

/* 手机号码 */
.item-main05 {}

.item-main05 .phone {
    font-size: 30rpx;
    color: #666666;
    padding-bottom: 24rpx;
    font-weight: 700;
    border-bottom: 1rpx solid #ccc;
}
