.header-content {}

.container {
    /* padding-bottom: 100rpx; */
}

.content {
    overflow: hidden;
    padding-top: 480rpx;
    /* padding: 0 30rpx; */
    background-color: #fff;
}

.banner {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}
.header-bg {
    width: 100%;
    height: 480rpx;
    position: relative;
    z-index: 5;
}
.avatar-box {
   width: 140rpx;
   border-radius: 50%;
    position: relative;
   position: absolute;
   left: 50%;
   top: 50%;
   transform: translate(-50%,-33%);
   margin-bottom: 20rpx;
   z-index: 99;
}
.header-avatar {
    border-radius: 50%;
    width: 100%;
    height: 140rpx;
    margin-bottom: 20rpx;
}

.header-toggle {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    position: absolute;
    top: 100rpx;
    right: -4rpx;
    z-index: 99;
}

.header-name {
    text-align: center;
    font-weight: 700;
    font-size: 36rpx;
    color: #030303;
    position: relative;
    z-index: 99;
}
.account-box{
    overflow: hidden;
    position: relative;
    z-index: 99;
    border-radius: 40rpx 40rpx 0 0;
    margin-top: -40rpx;
    padding-bottom: 60rpx;
    background-color: #fff;
}
.account{
    height: 180rpx;
}
.account-item{
    position: relative;
}
.account-item:last-child:after{
    content: '';
    width: 1rpx;
    height: 80rpx;
    opacity: 0.2;
    display: block;
    background-color: #979797;
    position: absolute;
    left: 0;top: 50%;
     margin-top: -40rpx;
}
.account-num{
    font-size: 40rpx;
    color: #030303;
    margin-bottom: 14rpx;
}
.account-txt{
    font-size: 24rpx;
    font-weight: 700;
    color: #030303;
}
.account-desc{
    font-size: 28rpx;
    color: #999999;
}
.btn-charge{
    width:670rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #333333;
    background: #FFE102;
    border-radius: 40rpx;
    font-weight: 700;
    margin:0 auto;
}
.menu-list{
    padding: 0 30rpx;
}
.list-item:first-child{
    border-top: 1rpx solid #eee;
}
.list-item{
    position: relative;
    height: 100rpx;
    border-bottom: 1rpx solid #eee;
}
.list-icon{
    width: 44rpx;
    height: 44rpx;
    margin-right: 26rpx;
}
.list-txt{
    font-size: 30rpx;
    color: #333333;
}
.icon-arrow-right{
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}