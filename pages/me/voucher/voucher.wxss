/* pages/me/voucher.wxss */
page {
    background-color: #f5f5f5;
}

.header {
    background: #FFE200;
}

.header-content {}

.container {
    padding-bottom: 0rpx;
}

.content {}

.nav-menu {
    position: fixed;
    z-index: 99;
    width: 100vw;
    background-color: #fff;
}

.nav-item {
    line-height: 88rpx;
    text-align: center;
    width: 50%;
    font-size: 30rpx;
    color: #333333;
}

.nav-item.is-actived {
    font-size: 30rpx;
    font-weight: 700;
    color: #CAA846;
    position: relative;
}

.nav-item.is-actived:after {
    content: '';
    display: block;
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    width: 86rpx;
    height: 6rpx;
    background-color: #CAA846;
}

.voucher-box {
    padding: 112rpx 30rpx 0;
}

.voucher-item {
    box-sizing: border-box;
    padding: 0 54rpx 0 40rpx;
    width: 100%;
    height: 228rpx;
    margin-bottom: 24rpx;
    position: relative;
}
.voucher-item-bg{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}
.voucher-item.is-used {
   
   
}

.voucher-item:last-child {
    margin-bottom: 0;
}

.item-t {
    height: 156rpx;
    position: relative;
    z-index: 2;
}

.item-b {
    height: 50rpx;
    position: relative;
    z-index: 2;
}

.voucher-desc {
    font-weight: 700;
    font-size: 32rpx;
    color: #333333;
    margin-bottom: 16rpx;
}
.voucher-desc.is-used {
   color: #666666; 
}
.voucher-name {
    font-size: 24rpx;
    color: #666666;
}

.item-t-r {
    font-weight: 700;
    font-size: 32rpx;
    color: #FF2121;
}
.item-t-r.is-used {
    color: #B9B9B9;
}
.price {
    font-size: 50rpx;
}

.date{
    font-size: 24rpx;
    color: #999;
}
