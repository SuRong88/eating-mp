/* pages/cancel/cancel.wxss */
.header {
    background: #FFE200;
}

.header-content {
    /* padding-left: 0; */
}

.content {
    padding: 0 40rpx;
}

.cancel-title {
    font-weight: 700;
    padding: 60rpx 0;
    font-size: 32rpx;
    color: #333333;
}

.day-item {
    width: 325rpx;
    line-height: 58rpx;
    text-align: center;
    border: 1rpx solid #bbb;
    font-size: 26rpx;
    color: #666;
    text-align: center;
    margin: 0 auto 20rpx;
}

.day-item:last-child {
    margin-bottom: 0;
}

.day-item.is-disabled {
    color: #aaa!important;
    border-color: #ddd!important;
    border-style: solid!important;
}
.day-item.is-disabled::after {
    display: none!important;
}
.day-item.is-checked {
    position: relative;
    border-color: #666;
    border-style: dashed;
}

.day-item.is-checked:after {
    content: '';
    display: block;
    position: absolute;
    top: -1rpx;
    right: -1rpx;
    width: 60rpx;
    height: 60rpx;
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100%;
}

.cancel-tip {
    font-size: 26rpx;
    color: #999;
    padding: 40rpx 0 60rpx;
    white-space: nowrap;
}

.cancel-desc-box {
    padding-top: 60rpx;
}

.desc-title {
    font-weight: 700;
    font-size: 28rpx;
    color: #333333;
    line-height: 60rpx;
}

.desc-txt {
    font-size: 26rpx;
    color: #999;
    line-height: 54rpx;
}

.btn-charge,
.btn-cancel {
    width: 100%;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #333333;
    background: #FFE102;
    border-radius: 40rpx;
    font-weight: 700;
}

/* -- 余额不足 -- */
.charge-box {}

.charge-desc {
    padding: 200rpx 0 140rpx;
}

.charge-desc-txt {
    font-weight: 700;
    text-align: center;
    font-size: 32rpx;
    color: #333333;
    text-align: center;
    line-height: 48rpx;
}
