/* pages/order/order.wxss */
page{
    background-color: #f5f5f5;
}
.header {
    background: #FFE200;
}
.header-content {
}
.container{
    padding-bottom: 100rpx;
}
.content {
    padding: 0 30rpx;
}
.order-box{
    overflow: hidden;
}
.order-item{
    border-radius: 12rpx;
    margin-top: 20rpx;
    background-color: #fff;
    padding: 24rpx 30rpx 28rpx;
}
.item-date{
    height: 48rpx;
}
.date{
    font-weight: 700;
    font-size: 32rpx;
    color: #030303;
}
.operate{
    width: 164rpx;
    font-size: 26rpx;
    color: #888888;
    line-height: 46rpx;
    text-align: center;
    border: 1rpx solid #DDDDDD;
    border-radius: 23rpx;
}
.item-con{
    padding: 32rpx 0; 
}
.con-txt{
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 30rpx;
}
.con-txt:last-child{
    margin-bottom: 0;
}
.icon-feeling{
    width: 30rpx;
    height: 30rpx;
    float: right;
}
.item-price{
    height: 36rpx;
    margin-bottom: 24rpx;
}
.price{
    font-weight: 700;
    font-size: 30rpx;
    color: #030303;
}
.price .price-num{
    font-size: 36rpx;
}
.state{
    font-size: 28rpx;
    color: #666666;
}
.item-desc{
    font-size: 24rpx;
    color: #B48C5A;
    line-height: 1.5;
}